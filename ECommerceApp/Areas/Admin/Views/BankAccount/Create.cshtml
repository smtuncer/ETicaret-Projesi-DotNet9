@model ECommerceApp.Models.BankAccount

@{
    ViewData["Title"] = "Yeni Banka Hesabı";
    Layout = "~/Areas/Admin/Views/_AdminLayout.cshtml";
}

<div class="app-main flex-column flex-row-fluid" id="kt_app_main">
    <div class="d-flex flex-column flex-column-fluid">
        <div id="kt_app_toolbar" class="app-toolbar py-3 py-lg-6">
            <div id="kt_app_toolbar_container" class="app-container container-xxl d-flex flex-stack">
                <div class="page-title d-flex flex-column justify-content-center flex-wrap me-3">
                    <h1 class="page-heading d-flex text-gray-900 fw-bold fs-3 flex-column justify-content-center my-0">Yeni Banka Hesabı</h1>
                    <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
                        <li class="breadcrumb-item text-muted">
                            <a asp-controller="BankAccount" asp-action="Index" class="text-muted text-hover-primary">Banka Hesapları</a>
                        </li>
                        <li class="breadcrumb-item">
                            <span class="bullet bg-gray-500 w-5px h-2px"></span>
                        </li>
                        <li class="breadcrumb-item text-muted">Yeni Ekle</li>
                    </ul>
                </div>
            </div>
        </div>
        <div id="kt_app_content" class="app-content flex-column-fluid">
            <div id="kt_app_content_container" class="app-container container-xxl">
                <form asp-action="Create" method="post">
                    <div class="card mb-5 mb-xl-10">
                        <div class="card-header border-0 cursor-pointer">
                            <div class="card-title m-0">
                                <h3 class="fw-bold m-0">Hesap Bilgileri</h3>
                            </div>
                        </div>
                        <div class="card-body border-top p-9">
                            <div class="row mb-6">
                                <label class="col-lg-4 col-form-label required fw-semibold fs-6">Banka Adı</label>
                                <div class="col-lg-8 fv-row">
                                    <input type="text" asp-for="BankName" class="form-control form-control-lg form-control-solid" placeholder="Banka Adı" />
                                    <span asp-validation-for="BankName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row mb-6">
                                <label class="col-lg-4 col-form-label required fw-semibold fs-6">Hesap Sahibi</label>
                                <div class="col-lg-8 fv-row">
                                    <input type="text" asp-for="AccountHolder" class="form-control form-control-lg form-control-solid" placeholder="Hesap Sahibi" />
                                    <span asp-validation-for="AccountHolder" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row mb-6">
                                <label class="col-lg-4 col-form-label required fw-semibold fs-6">IBAN</label>
                                <div class="col-lg-8 fv-row">
                                    <input type="text" asp-for="IBAN" class="form-control form-control-lg form-control-solid" placeholder="TR..." />
                                    <span asp-validation-for="IBAN" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row mb-6">
                                <label class="col-lg-4 col-form-label fw-semibold fs-6">Hesap No</label>
                                <div class="col-lg-8 fv-row">
                                    <input type="text" asp-for="AccountNumber" class="form-control form-control-lg form-control-solid" placeholder="Hesap No" />
                                    <span asp-validation-for="AccountNumber" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row mb-6">
                                <label class="col-lg-4 col-form-label fw-semibold fs-6">Şube Kodu</label>
                                <div class="col-lg-8 fv-row">
                                    <input type="text" asp-for="BranchCode" class="form-control form-control-lg form-control-solid" placeholder="Şube Kodu" />
                                    <span asp-validation-for="BranchCode" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row mb-6">
                                <label class="col-lg-4 col-form-label fw-semibold fs-6">Aktif mi?</label>
                                <div class="col-lg-8 fv-row">
                                    <div class="form-check form-check-solid form-switch fv-row">
                                        <input class="form-check-input w-45px h-30px" type="checkbox" asp-for="IsActive" />
                                        <label class="form-check-label" asp-for="IsActive"></label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer d-flex justify-content-end py-6 px-9">
                            <a asp-action="Index" class="btn btn-light me-3">İptal</a>
                            <button type="submit" class="btn btn-primary">Kaydet</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
