@model ECommerceApp.Areas.Admin.Models.ViewModels.UserDetailsVM
@using System.Globalization
@{
    ViewData["Title"] = "Kullanıcı Detayları";
    Layout = "~/Areas/Admin/Views/_AdminLayout.cshtml";
    var trCulture = new CultureInfo("tr-TR");
}

<div class="app-main flex-column flex-row-fluid" id="kt_app_main">
    <div class="d-flex flex-column flex-column-fluid">
        <!-- Toolbar -->
        <div id="kt_app_toolbar" class="app-toolbar py-3 py-lg-6">
            <div id="kt_app_toolbar_container" class="app-container container-xxl d-flex flex-stack">
                <div class="page-title d-flex flex-column justify-content-center flex-wrap me-3">
                    <h1 class="page-heading d-flex text-dark fw-bold fs-3 flex-column justify-content-center my-0">
                        Kullanıcı Detayı: @Model.User.Name @Model.User.Surname
                    </h1>
                    <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
                        <li class="breadcrumb-item text-muted">
                            <a asp-controller="Dashboard" asp-action="Index" class="text-muted text-hover-primary">Dashboard</a>
                        </li>
                        <li class="breadcrumb-item">
                            <span class="bullet bg-gray-400 w-5px h-2px"></span>
                        </li>
                        <li class="breadcrumb-item text-muted">
                            <a asp-controller="User" asp-action="Index" class="text-muted text-hover-primary">Kullanıcılar</a>
                        </li>
                        <li class="breadcrumb-item">
                            <span class="bullet bg-gray-400 w-5px h-2px"></span>
                        </li>
                        <li class="breadcrumb-item text-muted">Detay</li>
                    </ul>
                </div>
                <div class="d-flex align-items-center gap-2 gap-lg-3">
                    <a asp-action="Index" class="btn btn-sm fw-bold btn-secondary">Geri Dön</a>
                </div>
            </div>
        </div>

        <!-- Content -->
        <div id="kt_app_content" class="app-content flex-column-fluid">
            <div id="kt_app_content_container" class="app-container container-xxl">
                
                <!-- User Summary Card -->
                <div class="card mb-5 mb-xl-10">
                    <div class="card-body pt-9 pb-0">
                        <div class="d-flex flex-wrap flex-sm-nowrap mb-3">
                            <div class="me-7 mb-4">
                                <div class="symbol symbol-100px symbol-lg-160px symbol-fixed position-relative">
                                    <div class="symbol-label fs-1 fw-bold bg-light-primary text-primary">
                                        @Model.User.Name.Substring(0, 1).ToUpper()
                                    </div>
                                    <div class="position-absolute translate-middle bottom-0 start-100 mb-6 bg-success rounded-circle border border-4 border-body h-20px w-20px"></div>
                                </div>
                            </div>

                            <div class="flex-grow-1">
                                <div class="d-flex justify-content-between align-items-start flex-wrap mb-2">
                                    <div class="d-flex flex-column">
                                        <div class="d-flex align-items-center mb-2">
                                            <a href="#" class="text-gray-900 text-hover-primary fs-2 fw-bold me-1">@Model.User.Name @Model.User.Surname</a>
                                            <a href="#">
                                                <i class="ki-duotone ki-verify fs-1 text-primary">
                                                    <span class="path1"></span>
                                                    <span class="path2"></span>
                                                </i>
                                            </a>
                                        </div>
                                        <div class="d-flex flex-wrap fw-semibold fs-6 mb-4 pe-2">
                                            <a href="#" class="d-flex align-items-center text-gray-400 text-hover-primary me-5 mb-2">
                                                <i class="ki-duotone ki-profile-circle fs-4 me-1">
                                                    <span class="path1"></span>
                                                    <span class="path2"></span>
                                                    <span class="path3"></span>
                                                </i>
                                                @Model.User.Role
                                            </a>
                                            <a href="#" class="d-flex align-items-center text-gray-400 text-hover-primary me-5 mb-2">
                                                <i class="ki-duotone ki-geolocation fs-4 me-1">
                                                    <span class="path1"></span>
                                                    <span class="path2"></span>
                                                </i>
                                                Kayıt: @Model.User.CreatedDate.ToString("dd.MM.yyyy")
                                            </a>
                                            <a href="#" class="d-flex align-items-center text-gray-400 text-hover-primary mb-2">
                                                <i class="ki-duotone ki-sms fs-4 me-1">
                                                    <span class="path1"></span>
                                                    <span class="path2"></span>
                                                </i>
                                                @Model.User.Email
                                            </a>
                                        </div>
                                    </div>
                                    <div class="d-flex my-4">
                                        @{
                                            var activeClass = Model.User.IsActive ? "btn-light-danger" : "btn-light-success";
                                            var activeText = Model.User.IsActive ? "Engelle" : "Engeli Kaldır";
                                            var activeIcon = Model.User.IsActive ? "ki-lock" : "ki-lock-open";
                                            var activeAction = "ToggleBlock";
                                        }
                                        <a asp-action="@activeAction" asp-route-id="@Model.User.Id" class="btn btn-sm @activeClass me-2">
                                            <i class="ki-duotone @activeIcon fs-2 me-2">
                                                 <span class="path1"></span>
                                                 <span class="path2"></span>
                                                 <span class="path3"></span>
                                            </i>
                                            @activeText
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <ul class="nav nav-stretch nav-line-tabs nav-line-tabs-2x border-transparent fs-5 fw-bold">
                            <li class="nav-item mt-2">
                                <a class="nav-link text-active-primary ms-0 me-10 py-5 active" data-bs-toggle="tab" href="#kt_tab_orders">Siparişler</a>
                            </li>
                            <li class="nav-item mt-2">
                                <a class="nav-link text-active-primary ms-0 me-10 py-5" data-bs-toggle="tab" href="#kt_tab_payments">Ödeme Bildirimleri</a>
                            </li>
                            <li class="nav-item mt-2">
                                <a class="nav-link text-active-primary ms-0 me-10 py-5" data-bs-toggle="tab" href="#kt_tab_reviews">Yorumlar</a>
                            </li>
                             <li class="nav-item mt-2">
                                <a class="nav-link text-active-primary ms-0 me-10 py-5" data-bs-toggle="tab" href="#kt_tab_addresses">Adresler</a>
                            </li>
                        </ul>
                    </div>
                </div>

                <!-- Tab Content -->
                <div class="tab-content">
                    <!-- Orders Tab -->
                    <div class="tab-pane fade show active" id="kt_tab_orders" role="tabpanel">
                        <div class="card card-flush h-lg-100 mb-5 mb-xl-10">
                            <div class="card-header pt-5">
                                <h3 class="card-title align-items-start flex-column">
                                    <span class="card-label fw-bold text-dark">Sipariş Geçmişi</span>
                                    <span class="text-gray-400 mt-1 fw-semibold fs-6">Toplam @Model.Orders.Count sipariş</span>
                                </h3>
                            </div>
                            <div class="card-body pt-0">
                                <div class="table-responsive">
                                    <table class="table align-middle table-row-dashed fs-6 gy-5">
                                        <thead>
                                            <tr class="text-start text-gray-400 fw-bold fs-7 text-uppercase gs-0">
                                                <th class="min-w-100px">Sipariş No</th>
                                                <th class="min-w-100px">Tarih</th>
                                                <th class="min-w-100px">Durum</th>
                                                <th class="min-w-100px">Tutar</th>
                                                <th class="text-end min-w-100px">İşlemler</th>
                                            </tr>
                                        </thead>
                                        <tbody class="fw-semibold text-gray-600">
                                            @foreach (var order in Model.Orders)
                                            {
                                                <tr>
                                                    <td>
                                                        <a href="@Url.Action("Detail", "Order", new { id = order.Id })" class="text-gray-800 text-hover-primary fw-bold">@order.OrderNumber</a>
                                                    </td>
                                                    <td>@order.OrderDate.ToString("dd.MM.yyyy HH:mm")</td>
                                                    <td>
                                                        @{
                                                            var badgeClass = "badge-light-secondary";
                                                            if (order.Status == ECommerceApp.Models.OrderStatus.Pending) { badgeClass = "badge-light-warning"; }
                                                            else if (order.Status == ECommerceApp.Models.OrderStatus.Approved) { badgeClass = "badge-light-success"; }
                                                            else if (order.Status == ECommerceApp.Models.OrderStatus.Shipped) { badgeClass = "badge-light-info"; }
                                                            else if (order.Status == ECommerceApp.Models.OrderStatus.Delivered) { badgeClass = "badge-light-primary"; }
                                                            else if (order.Status == ECommerceApp.Models.OrderStatus.Cancelled || order.Status == ECommerceApp.Models.OrderStatus.Refunded) { badgeClass = "badge-light-danger"; }
                                                        }
                                                        <span class="badge @badgeClass">
                                                            @order.Status
                                                        </span>
                                                    </td>
                                                    <td>@order.TotalAmount.ToString("C2", trCulture)</td>
                                                    <td class="text-end">
                                                        <a href="@Url.Action("Detail", "Order", new { id = order.Id })" class="btn btn-sm btn-light btn-active-light-primary">Detay</a>
                                                    </td>
                                                </tr>
                                            }
                                            @if (!Model.Orders.Any())
                                            {
                                                <tr>
                                                    <td colspan="5" class="text-center text-muted">Kullanıcının siparişi bulunmuyor.</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Payment Notifications Tab -->
                    <div class="tab-pane fade" id="kt_tab_payments" role="tabpanel">
                        <div class="card card-flush h-lg-100 mb-5 mb-xl-10">
                            <div class="card-header pt-5">
                                <h3 class="card-title align-items-start flex-column">
                                    <span class="card-label fw-bold text-dark">Ödeme Bildirimleri</span>
                                </h3>
                            </div>
                            <div class="card-body pt-0">
                                <div class="table-responsive">
                                    <table class="table align-middle table-row-dashed fs-6 gy-5">
                                        <thead>
                                            <tr class="text-start text-gray-400 fw-bold fs-7 text-uppercase gs-0">
                                                <th class="min-w-100px">Tarih</th>
                                                <th class="min-w-100px">Sipariş</th>
                                                <th class="min-w-100px">Tutar</th>
                                                <th class="min-w-100px">Durum</th>
                                                <th class="text-end min-w-100px">İşlemler</th>
                                            </tr>
                                        </thead>
                                        <tbody class="fw-semibold text-gray-600">
                                            @foreach (var py in Model.PaymentNotifications)
                                            {
                                                <tr>
                                                    <td>@py.NotificationDate.ToString("dd.MM.yyyy HH:mm")</td>
                                                    <td>
                                                        @if (py.Order != null)
                                                        {
                                                            <a href="@Url.Action("Detail", "Order", new { id = py.Order.Id })" class="text-gray-800 text-hover-primary fw-bold">@py.Order.OrderNumber</a>
                                                        }
                                                        else
                                                        {
                                                            <span>-</span>
                                                        }
                                                    </td>
                                                    <td>@py.Amount.ToString("C2", trCulture)</td>
                                                    <td>
                                                        @{
                                                            var pyBadgeClass = "badge-light-secondary";
                                                            if (py.Status == ECommerceApp.Models.PaymentNotificationStatus.Pending) { pyBadgeClass = "badge-light-warning"; }
                                                            else if (py.Status == ECommerceApp.Models.PaymentNotificationStatus.Approved) { pyBadgeClass = "badge-light-success"; }
                                                            else { pyBadgeClass = "badge-light-danger"; }
                                                        }
                                                        <span class="badge @pyBadgeClass">
                                                            @py.Status
                                                        </span>
                                                    </td>
                                                    <td class="text-end">
                                                        <!-- İşlemler -->
                                                    </td>
                                                </tr>
                                            }
                                            @if (!Model.PaymentNotifications.Any())
                                            {
                                                <tr>
                                                    <td colspan="5" class="text-center text-muted">Ödeme bildirimi bulunmuyor.</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Reviews Tab -->
                    <div class="tab-pane fade" id="kt_tab_reviews" role="tabpanel">
                        <div class="card card-flush h-lg-100 mb-5 mb-xl-10">
                            <div class="card-header pt-5">
                                <h3 class="card-title align-items-start flex-column">
                                    <span class="card-label fw-bold text-dark">Kullanıcı Yorumları</span>
                                </h3>
                            </div>
                            <div class="card-body pt-0">
                                @if (Model.ProductComments.Any())
                                {
                                    @foreach (var comment in Model.ProductComments)
                                    {
                                        <div class="d-flex flex-stack position-relative mt-6">
                                            <div class="position-absolute h-100 w-4px bg-secondary rounded top-0 start-0"></div>
                                            <div class="fw-semibold ms-5">
                                                <div class="fs-7 mb-1">
                                                    <span class="text-gray-500">@comment.CreatedDate.ToString("dd.MM.yyyy HH:mm") tarihinde </span>
                                                    <a href="#" class="fs-5 fw-bold text-dark text-hover-primary mb-2">@comment.Product?.Name</a>
                                                    <span class="text-gray-500"> ürününe yorum yaptı</span>
                                                </div>
                                                <div class="fs-6 text-gray-600 fst-italic">" @comment.Comment "</div>
                                                <div class="d-flex mt-2">
                                                    @for (int i = 0; i < 5; i++)
                                                    {
                                                        if (i < comment.Rating)
                                                        {
                                                            <i class="bi bi-star-fill text-warning fs-7 me-1"></i>
                                                        }
                                                        else
                                                        {
                                                            <i class="bi bi-star text-muted fs-7 me-1"></i>
                                                        }
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    }
                                }
                                else
                                {
                                    <p class="text-muted">Kullanıcının henüz yorumu bulunmuyor.</p>
                                }
                            </div>
                        </div>
                    </div>
                    
                    <!-- Addresses Tab -->
                    <div class="tab-pane fade" id="kt_tab_addresses" role="tabpanel">
                        <div class="card card-flush h-lg-100 mb-5 mb-xl-10">
                            <div class="card-header pt-5">
                                <h3 class="card-title align-items-start flex-column">
                                    <span class="card-label fw-bold text-dark">Kayıtlı Adresler</span>
                                </h3>
                            </div>
                             <div class="card-body pt-0">
                                <div class="row gx-9 gy-6">
                                    @foreach(var address in Model.User.Addresses)
                                    {
                                        <div class="col-xl-6">
                                            <div class="card card-dashed h-xl-100 flex-row flex-stack p-6">
                                                <div class="d-flex flex-column gap-2">
                                                    <div class="d-flex align-items-center gap-2">
                                                        <div class="fs-4 fw-bold text-dark">@address.Title</div>
                                                        @if(address.IsBillingAddress) 
                                                        { 
                                                            <span class="badge badge-light-primary">Fatura</span> 
                                                        }
                                                        else
                                                        {
                                                            <span class="badge badge-light-info">Teslimat</span>
                                                        }
                                                    </div>
                                                    <div class="fs-6 fw-semibold text-gray-600">
                                                        @address.OpenAddress <br />
                                                        @address.District / @address.City <br />
                                                        @address.ZipCode
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                    @if(!Model.User.Addresses.Any())
                                    {
                                         <p class="text-muted">Kayıtlı adres bulunmuyor.</p>
                                    }
                                </div>
                            </div>
                        </div>
                     </div>
                </div>
            </div>
        </div>
    </div>
</div>
