@model IEnumerable<ECommerceApp.Models.Faq>

@{
    ViewData["Title"] = "SSS Yönetimi";
    Layout = "~/Areas/Admin/Views/_AdminLayout.cshtml";
}

<div class="app-main flex-column flex-row-fluid" id="kt_app_main">
    <div class="d-flex flex-column flex-column-fluid">
        <div id="kt_app_toolbar" class="app-toolbar py-3 py-lg-6">
            <div id="kt_app_toolbar_container" class="app-container container-xxl d-flex flex-stack">
                <div class="page-title d-flex flex-column justify-content-center flex-wrap me-3">
                    <h1 class="page-heading d-flex text-gray-900 fw-bold fs-3 flex-column justify-content-center my-0">SSS Yönetimi</h1>
                    <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
                        <li class="breadcrumb-item text-muted">
                            <a asp-controller="Dashboard" asp-action="Index" class="text-muted text-hover-primary">Dashboard</a>
                        </li>
                        <li class="breadcrumb-item">
                            <span class="bullet bg-gray-500 w-5px h-2px"></span>
                        </li>
                        <li class="breadcrumb-item text-muted">SSS Yönetimi</li>
                    </ul>
                </div>
                <div class="card-toolbar">
                    <a href="#" class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#addFaqModal">
                        <i class="ki-duotone ki-plus fs-2"></i>Yeni SSS Ekle
                    </a>
                </div>
            </div>
        </div>
        <div id="kt_app_content" class="app-content flex-column-fluid">
            <div id="kt_app_content_container" class="app-container container-xxl">
                <div class="card mb-5 mb-xl-8">
                    <div class="card-header border-0 pt-5">
                        <h3 class="card-title align-items-start flex-column">
                            <span class="card-label fw-bold fs-3 mb-1">Toplam @Model.Count() SSS</span>
                        </h3>
                    </div>
                    <div class="card-body py-3">
                        <div class="table-responsive">
                            <table class="table align-middle gs-0 gy-4">
                                <thead>
                                    <tr class="fw-bold text-muted bg-light">
                                        <th class="ps-4 rounded-start">Kategori</th>
                                        <th>Soru</th>
                                        <th>Sıra</th>
                                        <th class="rounded-end"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                <span class="text-gray-900 fw-bold fs-6">@item.Category</span>
                                            </td>
                                            <td>@item.Question</td>
                                            <td>@item.Order</td>
                                            <td>
                                                <a href="#" class="btn btn-success btn-sm px-4 me-2" data-bs-toggle="modal" data-bs-target="#editModal-@item.Id">
                                                    <i class="bi bi-pencil-square"></i>
                                                </a>
                                                <a href="#" class="btn btn-danger btn-sm px-4" data-bs-toggle="modal" data-bs-target="#deleteModal-@item.Id">
                                                    <i class="bi bi-trash-fill"></i>
                                                </a>

                                                <!-- Delete Modal -->
                                                <div class="modal fade" id="deleteModal-@item.Id" tabindex="-1" aria-hidden="true">
                                                    <div class="modal-dialog modal-dialog-centered mw-650px">
                                                        <div class="modal-content rounded">
                                                            <div class="modal-header pb-0 border-0 justify-content-end">
                                                                <div class="btn btn-sm btn-icon btn-active-color-primary" data-bs-dismiss="modal">
                                                                    <i class="ki-duotone ki-cross fs-1"></i>
                                                                </div>
                                                            </div>
                                                            <div class="modal-body scroll-y px-10 px-lg-15 pt-0 pb-15">
                                                                <div class="mb-13 text-center">
                                                                    <h1 class="mb-3">SSS Sil</h1>
                                                                    <div class="text-muted fw-semibold fs-5">Bu işlem geri alınamaz!</div>
                                                                </div>
                                                                <div class="mb-13">
                                                                    <div class="text-center">
                                                                        <h4 class="fw-bold">@item.Question</h4>
                                                                    </div>
                                                                </div>
                                                                <div class="text-center">
                                                                    <button type="button" data-bs-dismiss="modal" class="btn btn-light me-3">İptal</button>
                                                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                                                                        <span class="indicator-label">Sil</span>
                                                                    </a>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>

                                                <!-- Edit Modal -->
                                                <div class="modal fade" id="editModal-@item.Id" tabindex="-1" aria-hidden="true">
                                                    <div class="modal-dialog modal-dialog-centered mw-900px">
                                                        <div class="modal-content rounded">
                                                            <div class="modal-header pb-0 border-0 justify-content-end">
                                                                <div class="btn btn-sm btn-icon btn-active-color-primary" data-bs-dismiss="modal">
                                                                    <i class="ki-duotone ki-cross fs-1"></i>
                                                                </div>
                                                            </div>
                                                            <form asp-action="Edit" method="Post">
                                                                @Html.AntiForgeryToken()
                                                                <input type="hidden" name="Id" value="@item.Id" />
                                                                <div class="modal-body scroll-y px-10 px-lg-15 pt-0 pb-15">
                                                                    <div class="text-center mb-13">
                                                                        <h1 class="mb-3">SSS Düzenle</h1>
                                                                        <div class="text-muted fw-semibold fs-5">SSS bilgilerini güncelleyin</div>
                                                                    </div>
                                                                    <div class="row mb-6">
                                                                        <label class="col-lg-3 col-form-label required fw-semibold fs-6">Kategori</label>
                                                                        <div class="col-lg-9">
                                                                            <input type="text" name="Category" class="form-control form-control-lg form-control-solid" value="@item.Category" placeholder="Örn: Kargo, Ödeme" required />
                                                                        </div>
                                                                    </div>
                                                                    <div class="row mb-6">
                                                                        <label class="col-lg-3 col-form-label required fw-semibold fs-6">Soru</label>
                                                                        <div class="col-lg-9">
                                                                            <input type="text" name="Question" class="form-control form-control-lg form-control-solid" value="@item.Question" required />
                                                                        </div>
                                                                    </div>
                                                                    <div class="row mb-6">
                                                                        <label class="col-lg-3 col-form-label required fw-semibold fs-6">Cevap</label>
                                                                        <div class="col-lg-9">
                                                                            <textarea name="Answer" class="form-control form-control-lg form-control-solid" rows="5" required>@item.Answer</textarea>
                                                                        </div>
                                                                    </div>
                                                                    <div class="row mb-6">
                                                                        <label class="col-lg-3 col-form-label fw-semibold fs-6">Sıra</label>
                                                                        <div class="col-lg-9">
                                                                            <input type="number" name="Order" class="form-control form-control-lg form-control-solid" value="@item.Order" />
                                                                        </div>
                                                                    </div>
                                                                    <div class="text-center">
                                                                        <button type="button" data-bs-dismiss="modal" class="btn btn-light me-3">İptal</button>
                                                                        <button type="submit" class="btn btn-primary">
                                                                            <span class="indicator-label">Değişiklikleri Kaydet</span>
                                                                        </button>
                                                                    </div>
                                                                </div>
                                                            </form>
                                                        </div>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <!-- Add FAQ Modal -->
                <div class="modal fade" id="addFaqModal" tabindex="-1" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered mw-900px">
                        <div class="modal-content rounded">
                            <div class="modal-header pb-0 border-0 justify-content-end">
                                <div class="btn btn-sm btn-icon btn-active-color-primary" data-bs-dismiss="modal">
                                    <i class="ki-duotone ki-cross fs-1"></i>
                                </div>
                            </div>
                            <form asp-action="Create" method="Post">
                                @Html.AntiForgeryToken()
                                <div class="modal-body scroll-y px-10 px-lg-15 pt-0 pb-15">
                                    <div class="text-center mb-13">
                                        <h1 class="mb-3">Yeni SSS Ekle</h1>
                                        <div class="text-muted fw-semibold fs-5">SSS bilgilerini girin</div>
                                    </div>
                                    <div class="row mb-6">
                                        <label class="col-lg-3 col-form-label required fw-semibold fs-6">Kategori</label>
                                        <div class="col-lg-9">
                                            <input type="text" name="Category" class="form-control form-control-lg form-control-solid" placeholder="Örn: Kargo, Ödeme" required />
                                        </div>
                                    </div>
                                    <div class="row mb-6">
                                        <label class="col-lg-3 col-form-label required fw-semibold fs-6">Soru</label>
                                        <div class="col-lg-9">
                                            <input type="text" name="Question" class="form-control form-control-lg form-control-solid" placeholder="Soru" required />
                                        </div>
                                    </div>
                                    <div class="row mb-6">
                                        <label class="col-lg-3 col-form-label required fw-semibold fs-6">Cevap</label>
                                        <div class="col-lg-9">
                                            <textarea name="Answer" class="form-control form-control-lg form-control-solid" rows="5" placeholder="Cevap" required></textarea>
                                        </div>
                                    </div>
                                    <div class="row mb-6">
                                        <label class="col-lg-3 col-form-label fw-semibold fs-6">Sıra</label>
                                        <div class="col-lg-9">
                                            <input type="number" name="Order" class="form-control form-control-lg form-control-solid" value="0" />
                                        </div>
                                    </div>
                                    <div class="text-center">
                                        <button type="reset" data-bs-dismiss="modal" class="btn btn-light me-3">Geri</button>
                                        <button type="submit" class="btn btn-primary">
                                            <span class="indicator-label">Ekle</span>
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
