@model IEnumerable<ECommerceApp.Models.ReturnRequest>

@{
    ViewData["Title"] = "İade Talepleri";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h4 class="card-title">İade ve İptal Talepleri</h4>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-striped" id="returnRequestsTable">
                        <thead>
                            <tr>
                                <th>Talep No</th>
                                <th>Tarih</th>
                                <th>Kullanıcı</th>
                                <th>Sipariş No</th>
                                <th>Ürün</th>
                                <th>Neden</th>
                                <th>Durum</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>#@item.Id</td>
                                    <td>@item.CreatedDate.ToString("dd.MM.yyyy HH:mm")</td>
                                    <td>
                                        @item.User.Name @item.User.Surname<br/>
                                        <small class="text-muted">@item.User.Email</small>
                                    </td>
                                    <td>
                                        <a asp-controller="Order" asp-action="Detail" asp-route-id="@item.OrderId">@item.Order.OrderNumber</a>
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            @if (item.OrderItem.Product.Images != null && item.OrderItem.Product.Images.Any())
                                            {
                                                <img src="@item.OrderItem.Product.Images.First().ImageUrl" width="40" height="40" class="rounded me-2" style="object-fit:cover" />
                                            }
                                            <div>
                                                <span class="d-block fw-bold">@item.OrderItem.ProductName</span>
                                                <small>Adet: @item.OrderItem.Quantity</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <span data-bs-toggle="tooltip" title="@item.Reason">
                                            @(item.Reason.Length > 30 ? item.Reason.Substring(0, 30) + "..." : item.Reason)
                                        </span>
                                    </td>
                                    <td>
                                        @if (item.Status == ECommerceApp.Models.ReturnRequestStatus.Pending)
                                        {
                                            <span class="badge bg-warning text-dark">Bekliyor</span>
                                        }
                                        else if (item.Status == ECommerceApp.Models.ReturnRequestStatus.Approved)
                                        {
                                            <span class="badge bg-success">Onaylandı</span>
                                        }
                                        else if (item.Status == ECommerceApp.Models.ReturnRequestStatus.Rejected)
                                        {
                                            <span class="badge bg-danger">Reddedildi</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">İptal Edildi</span>
                                        }
                                    </td>
                                    <td>
                                        @if (item.Status == ECommerceApp.Models.ReturnRequestStatus.Pending)
                                        {
                                            <div class="d-flex gap-2">
                                                <form asp-action="Approve" asp-route-id="@item.Id" method="post" onsubmit="return confirm('Bu talebi onaylamak istediğinize emin misiniz?');">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" class="btn btn-sm btn-success">Onayla</button>
                                                </form>
                                                <form asp-action="Reject" asp-route-id="@item.Id" method="post" onsubmit="return confirm('Bu talebi reddetmek istediğinize emin misiniz?');">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" class="btn btn-sm btn-danger">Reddet</button>
                                                </form>
                                            </div>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#returnRequestsTable').DataTable({
                "destroy": true,
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.13.6/i18n/tr.json"
                },
                "order": [[1, "desc"]]
            });
        });
    </script>
}
