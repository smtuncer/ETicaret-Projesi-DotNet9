@model ECommerceApp.Models.MailSetting

@{
    ViewData["Title"] = "Mail Ayarları";
    Layout = "~/Areas/Admin/Views/_AdminLayout.cshtml";
}

<div class="app-main flex-column flex-row-fluid" id="kt_app_main">
    <div class="d-flex flex-column flex-column-fluid">
        <div id="kt_app_toolbar" class="app-toolbar py-3 py-lg-6">
            <div id="kt_app_toolbar_container" class="app-container container-xxl d-flex flex-stack">
                <div class="page-title d-flex flex-column justify-content-center flex-wrap me-3">
                    <h1 class="page-heading d-flex text-gray-900 fw-bold fs-3 flex-column justify-content-center my-0">Mail Ayarları</h1>
                    <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
                        <li class="breadcrumb-item text-muted">
                            <a asp-controller="Dashboard" asp-action="Index" class="text-muted text-hover-primary">Dashboard</a>
                        </li>
                        <li class="breadcrumb-item">
                            <span class="bullet bg-gray-500 w-5px h-2px"></span>
                        </li>
                        <li class="breadcrumb-item text-muted">Mail Ayarları</li>
                    </ul>
                </div>
            </div>
        </div>
        <div id="kt_app_content" class="app-content flex-column-fluid">
            <div id="kt_app_content_container" class="app-container container-xxl">
                <div class="card mb-5 mb-xl-10">
                    <div class="card-header border-0 cursor-pointer" role="button" data-bs-toggle="collapse" data-bs-target="#kt_account_profile_details" aria-expanded="true" aria-controls="kt_account_profile_details">
                        <div class="card-title m-0">
                            <h3 class="fw-bold m-0">SMTP Yapılandırması</h3>
                        </div>
                    </div>
                    <div id="kt_account_settings_profile_details" class="collapse show">
                        <form asp-action="Index" method="post" class="form">
                            @Html.AntiForgeryToken()
                            <div class="card-body border-top p-9">
                                <div class="row mb-6">
                                    <label class="col-lg-4 col-form-label required fw-semibold fs-6">Gönderen Adı</label>
                                    <div class="col-lg-8 fv-row">
                                        <input type="text" asp-for="SenderName" class="form-control form-control-lg form-control-solid" placeholder="Örn: E-Ticaret Sitesi" />
                                        <span asp-validation-for="SenderName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row mb-6">
                                    <label class="col-lg-4 col-form-label required fw-semibold fs-6">Gönderen E-posta</label>
                                    <div class="col-lg-8 fv-row">
                                        <input type="email" asp-for="SenderEmail" class="form-control form-control-lg form-control-solid" placeholder="Örn: info@site.com" />
                                        <span asp-validation-for="SenderEmail" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row mb-6">
                                    <label class="col-lg-4 col-form-label required fw-semibold fs-6">SMTP Sunucusu</label>
                                    <div class="col-lg-8 fv-row">
                                        <input type="text" asp-for="Server" class="form-control form-control-lg form-control-solid" placeholder="Örn: smtp.gmail.com" />
                                        <span asp-validation-for="Server" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row mb-6">
                                    <label class="col-lg-4 col-form-label required fw-semibold fs-6">Port</label>
                                    <div class="col-lg-8 fv-row">
                                        <input type="number" asp-for="Port" class="form-control form-control-lg form-control-solid" placeholder="Örn: 587" />
                                        <span asp-validation-for="Port" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row mb-6">
                                    <label class="col-lg-4 col-form-label required fw-semibold fs-6">Kullanıcı Adı</label>
                                    <div class="col-lg-8 fv-row">
                                        <input type="text" asp-for="Username" class="form-control form-control-lg form-control-solid" placeholder="SMTP Kullanıcı Adı" />
                                        <span asp-validation-for="Username" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row mb-6">
                                    <label class="col-lg-4 col-form-label required fw-semibold fs-6">Şifre</label>
                                    <div class="col-lg-8 fv-row">
                                        <input type="password" asp-for="Password" class="form-control form-control-lg form-control-solid" placeholder="SMTP Şifresi" />
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row mb-6">
                                    <label class="col-lg-4 col-form-label fw-semibold fs-6">SSL Kullan</label>
                                    <div class="col-lg-8 fv-row">
                                        <div class="form-check form-check-solid form-switch fv-row">
                                            <input class="form-check-input w-45px h-30px" type="checkbox" asp-for="EnableSsl" />
                                            <label class="form-check-label" asp-for="EnableSsl"></label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer d-flex justify-content-end py-6 px-9">
                                <button type="submit" class="btn btn-primary">Ayarları Kaydet</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
