@model IEnumerable<ECommerceApp.Models.ContactMessage>

@{
    ViewData["Title"] = "Gelen Kutusu";
    Layout = "~/Areas/Admin/Views/_AdminLayout.cshtml";
    int currentPage = ViewBag.CurrentPage ?? 1;
    int totalPages = ViewBag.TotalPages ?? 1;
    string search = ViewBag.Search as string;
    string status = ViewBag.Status as string;
}

<div class="app-main flex-column flex-row-fluid" id="kt_app_main">
    <div class="d-flex flex-column flex-column-fluid">
        <div id="kt_app_toolbar" class="app-toolbar py-3 py-lg-6">
            <div id="kt_app_toolbar_container" class="app-container container-xxl d-flex flex-stack">
                <div class="page-title d-flex flex-column justify-content-center flex-wrap me-3">
                    <h1 class="page-heading d-flex text-gray-900 fw-bold fs-3 flex-column justify-content-center my-0">Gelen Kutusu</h1>
                    <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
                        <li class="breadcrumb-item text-muted">
                            <a asp-controller="Dashboard" asp-action="Index" class="text-muted text-hover-primary">Dashboard</a>
                        </li>
                        <li class="breadcrumb-item">
                            <span class="bullet bg-gray-500 w-5px h-2px"></span>
                        </li>
                        <li class="breadcrumb-item text-muted">Gelen Kutusu</li>
                    </ul>
                </div>
            </div>
        </div>
        <div id="kt_app_content" class="app-content flex-column-fluid">
            <div id="kt_app_content_container" class="app-container container-xxl">
                
                <div class="card mb-7">
                    <div class="card-body">
                        <form asp-action="Index" method="get" class="d-flex align-items-center position-relative my-1">
                            <i class="ki-duotone ki-magnifier fs-3 position-absolute ms-5">
                                <span class="path1"></span><span class="path2"></span>
                            </i>
                            <input type="text" name="search" value="@search" class="form-control form-control-solid w-250px ps-13" placeholder="Mesajlarda ara..." />
                            
                            <div class="ms-3">
                                <select name="status" class="form-select form-select-solid" onchange="this.form.submit()">
                                    <option value="">Tüm Durumlar</option>
                                    @{
                                        var statuses = new Dictionary<string, string> { { "unread", "Okunmamış" }, { "read", "Okunmuş" }, { "replied", "Cevaplanmış" } };
                                        foreach (var s in statuses)
                                        {
                                            if (status == s.Key)
                                            {
                                                <option value="@s.Key" selected>@s.Value</option>
                                            }
                                            else
                                            {
                                                <option value="@s.Key">@s.Value</option>
                                            }
                                        }
                                    }
                                </select>
                            </div>
                            
                            <button type="submit" class="btn btn-primary ms-3">Ara</button>
                            @if (!string.IsNullOrEmpty(search) || !string.IsNullOrEmpty(status))
                            {
                                <a asp-action="Index" class="btn btn-light ms-2">Temizle</a>
                            }
                        </form>
                    </div>
                </div>

                <div class="card card-flush">
                    <div class="card-header align-items-center py-5 gap-2 gap-md-5">
                        <div class="card-title">
                            <h3>Mesajlar</h3>
                        </div>
                    </div>
                    <div class="card-body pt-0">
                        <div class="table-responsive">
                            <table class="table align-middle table-row-dashed fs-6 gy-5" id="kt_ecommerce_category_table">
                                <thead>
                                    <tr class="text-start text-gray-400 fw-bold fs-7 text-uppercase gs-0">
                                        <th class="min-w-200px">GÖNDEREN</th>
                                        <th class="min-w-150px">KONU</th>
                                        <th class="min-w-125px">TARİH</th>
                                        <th class="min-w-100px">DURUM</th>
                                        <th class="text-end min-w-70px">İŞLEMLER</th>
                                    </tr>
                                </thead>
                                <tbody class="fw-semibold text-gray-600">
                                    @foreach (var item in Model)
                                    {
                                        var badgeClass = item.IsRead ? "" : "badge-light-danger"; // Unread check removed from tr, moved to specific elements
                                        var rowClass = item.IsRead ? "" : "bg-light-warning";
                                        
                                        var initials = string.IsNullOrEmpty(item.Name) ? "?" : item.Name.Substring(0, 1).ToUpper();
                                        var colors = new[] { "primary", "warning", "success", "danger", "info" };
                                        var color = colors[item.Id % colors.Length];

                                        <tr class="@(item.IsRead ? "" : "fw-bold")">
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="symbol symbol-45px symbol-circle me-3">
                                                        <span class="symbol-label bg-light-@color text-@color fw-bold fs-6">@initials</span>
                                                    </div>
                                                    <div class="d-flex justify-content-start flex-column">
                                                        <a asp-action="Details" asp-route-id="@item.Id" class="text-gray-800 text-hover-primary fs-6 fw-bold mb-1">@item.Name</a>
                                                        <span class="text-muted fw-semibold text-muted d-block fs-7">@item.Email</span>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="text-gray-800 fs-6 fw-normal">@item.Subject</div>
                                                <div class="text-muted fs-7">@(item.Message?.Length > 50 ? item.Message.Substring(0, 50) + "..." : item.Message)</div>
                                            </td>
                                            <td>
                                                @{
                                                    var timeSpan = DateTime.Now - item.SentDate;
                                                    string timeAgo;
                                                    if (timeSpan.TotalMinutes < 60) { timeAgo = $"{(int)timeSpan.TotalMinutes} dk önce"; }
                                                    else if (timeSpan.TotalHours < 24) { timeAgo = $"{(int)timeSpan.TotalHours} sa önce"; }
                                                    else { timeAgo = item.SentDate.ToString("dd.MM.yyyy HH:mm"); }
                                                }
                                                <span class="fw-bold text-gray-600">@timeAgo</span>
                                            </td>
                                            <td>
                                                @if (item.IsReplied)
                                                {
                                                    <div class="badge badge-light-success">Cevaplandı</div>
                                                }
                                                else if (item.IsRead)
                                                {
                                                    <div class="badge badge-light-primary">Okundu</div>
                                                }
                                                else
                                                {
                                                    <div class="badge badge-light-danger pulse pulse-danger">
                                                        <span class="pulse-ring"></span>
                                                        <span class="fw-bold">YENİ</span>
                                                    </div>
                                                }
                                            </td>
                                            <td class="text-end">
                                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary btn-sm px-4 me-2">
                                                    <i class="ki-duotone ki-eye fs-2"></i>
                                                </a>
                                                <a href="#" class="btn btn-danger btn-sm px-4 me-2" onclick="confirmDelete(@item.Id)">
                                                    <i class="ki-duotone ki-trash fs-2"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        
                        <!-- Pagination -->
                        @if (totalPages > 1)
                        {
                            <div class="d-flex justify-content-center mt-5">
                                <ul class="pagination">
                                    @if (currentPage > 1)
                                    {
                                        <li class="page-item">
                                            <a class="page-link" href="@Url.Action("Index", new { page = currentPage - 1, search, status })">
                                                <i class="previous"></i>
                                            </a>
                                        </li>
                                    }
                                    
                                    @for (int i = 1; i <= totalPages; i++)
                                    {
                                        <li class="page-item @(i == currentPage ? "active" : "")">
                                            <a class="page-link" href="@Url.Action("Index", new { page = i, search, status })">@i</a>
                                        </li>
                                    }

                                    @if (currentPage < totalPages)
                                    {
                                        <li class="page-item">
                                            <a class="page-link" href="@Url.Action("Index", new { page = currentPage + 1, search, status })">
                                                <i class="next"></i>
                                            </a>
                                        </li>
                                    }
                                </ul>
                            </div>
                        }

                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    function confirmDelete(id) {
        Swal.fire({
            title: 'Emin misiniz?',
            text: "Bu mesajı silmek istediğinize emin misiniz?",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#d33',
            cancelButtonColor: '#3085d6',
            confirmButtonText: 'Evet, Sil!',
            cancelButtonText: 'İptal'
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = '/Admin/Inbox/Delete/' + id;
            }
        })
    }
</script>
