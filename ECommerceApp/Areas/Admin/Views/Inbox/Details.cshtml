@model ECommerceApp.Models.ContactMessage

@{
    ViewData["Title"] = "Mesaj Detayı";
    Layout = "~/Areas/Admin/Views/_AdminLayout.cshtml";
}

<div class="app-main flex-column flex-row-fluid" id="kt_app_main">
    <div class="d-flex flex-column flex-column-fluid">
        <div id="kt_app_toolbar" class="app-toolbar py-3 py-lg-6">
            <div id="kt_app_toolbar_container" class="app-container container-xxl d-flex flex-stack">
                <div class="page-title d-flex flex-column justify-content-center flex-wrap me-3">
                    <h1 class="page-heading d-flex text-gray-900 fw-bold fs-3 flex-column justify-content-center my-0">Mesaj Detayı</h1>
                    <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
                        <li class="breadcrumb-item text-muted">
                            <a asp-action="Index" class="text-muted text-hover-primary">Gelen Kutusu</a>
                        </li>
                        <li class="breadcrumb-item">
                            <span class="bullet bg-gray-500 w-5px h-2px"></span>
                        </li>
                        <li class="breadcrumb-item text-muted">Mesaj Oku</li>
                    </ul>
                </div>
                <div class="d-flex align-items-center gap-2 gap-lg-3">
                    <a asp-action="Index" class="btn btn-sm fw-bold btn-secondary">
                        <i class="ki-duotone ki-arrow-left fs-2"></i> Geri Dön
                    </a>
                    <a href="#" onclick="confirmDelete(@Model.Id)" class="btn btn-sm fw-bold btn-danger">
                        <i class="ki-duotone ki-trash fs-2"></i> Sil
                    </a>
                </div>
            </div>
        </div>
        <div id="kt_app_content" class="app-content flex-column-fluid">
            <div id="kt_app_content_container" class="app-container container-xxl">
                
                <div class="card mb-5 mb-xl-10">
                    <div class="card-body p-9">
                        
                        <!-- Header -->
                        <div class="d-flex flex-wrap flex-sm-nowrap mb-6">
                            <div class="flex-grow-1">
                                <div class="d-flex justify-content-between align-items-start flex-wrap mb-2">
                                    <div class="d-flex flex-column">
                                        <div class="d-flex align-items-center mb-2">
                                            <a href="#" class="text-gray-900 text-hover-primary fs-2 fw-bold me-1">@Model.Name</a>
                                        </div>
                                        <div class="d-flex flex-wrap fw-semibold fs-6 mb-4 pe-2">
                                            <a href="mailto:@Model.Email" class="d-flex align-items-center text-gray-400 text-hover-primary me-5 mb-2">
                                                <i class="ki-duotone ki-sms fs-4 me-1"><span class="path1"></span><span class="path2"></span></i>
                                                @Model.Email
                                            </a>
                                            <span class="d-flex align-items-center text-gray-400 me-5 mb-2">
                                                <i class="ki-duotone ki-calendar fs-4 me-1"><span class="path1"></span><span class="path2"></span></i>
                                                @Model.SentDate.ToString("dd MMMM yyyy HH:mm")
                                            </span>
                                        </div>
                                    </div>
                                    <div class="d-flex">
                                        @if (Model.IsReplied)
                                        {
                                            <span class="badge badge-light-success fs-base">Cevaplandı</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-light-warning fs-base">Cevap Bekliyor</span>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="separator separator-dashed my-4"></div>

                        <!-- Subject & Content -->
                        <div class="mb-7 mt-5">
                            <h2 class="mb-4 text-gray-800">@Model.Subject</h2>
                            <div class="fs-6 text-gray-700 lh-lg bg-light p-5 rounded border border-gray-200">
                                @Model.Message
                            </div>
                        </div>

                        <div class="separator separator-dashed my-10"></div>
                        
                        <!-- Reply Form -->
                        <div class="mt-5">
                            <h4 class="mb-5 text-gray-900">Yanıtla</h4>
                            <div class="card shadow-sm border">
                                <div class="card-body">
                                    <form asp-action="Reply" method="post">
                                        <input type="hidden" name="id" value="@Model.Id" />
                                        <div class="mb-5">
                                            <label class="form-label text-muted">Kime:</label>
                                            <span class="fw-bold text-dark">@Model.Email</span>
                                        </div>
                                        <div class="mb-5">
                                            <textarea name="replyMessage" class="form-control form-control-solid" rows="6" placeholder="Cevabınızı buraya yazın..." required></textarea>
                                        </div>
                                        <div class="d-flex justify-content-end">
                                            <button type="submit" class="btn btn-primary">
                                                <span class="indicator-label">
                                                    <i class="ki-duotone ki-send fs-2 me-2">
                                                        <span class="path1"></span><span class="path2"></span>
                                                    </i>Gönder
                                                </span>
                                            </button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    function confirmDelete(id) {
        Swal.fire({
            title: 'Emin misiniz?',
            text: "Bu mesajı silmek istediğinize emin misiniz?",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#d33',
            cancelButtonColor: '#3085d6',
            confirmButtonText: 'Evet, Sil!',
            cancelButtonText: 'İptal'
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = '/Admin/Inbox/Delete/' + id;
            }
        })
    }
</script>
