@model ECommerceApp.Models.Coupon

@{
    ViewData["Title"] = "Kupon Düzenle";
    Layout = "~/Areas/Admin/Views/_AdminLayout.cshtml";
}

<div class="app-main flex-column flex-row-fluid" id="kt_app_main">
    <div class="d-flex flex-column flex-column-fluid">
        <div id="kt_app_toolbar" class="app-toolbar py-3 py-lg-6">
            <div id="kt_app_toolbar_container" class="app-container container-xxl d-flex flex-stack">
                <div class="page-title d-flex flex-column justify-content-center flex-wrap me-3">
                    <h1 class="page-heading d-flex text-gray-900 fw-bold fs-3 flex-column justify-content-center my-0">Kupon Düzenle</h1>
                    <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
                        <li class="breadcrumb-item text-muted">
                            <a asp-controller="Coupon" asp-action="Index" class="text-muted text-hover-primary">Kuponlar</a>
                        </li>
                        <li class="breadcrumb-item">
                            <span class="bullet bg-gray-500 w-5px h-2px"></span>
                        </li>
                        <li class="breadcrumb-item text-muted">Düzenle</li>
                    </ul>
                </div>
            </div>
        </div>
        <div id="kt_app_content" class="app-content flex-column-fluid">
            <div id="kt_app_content_container" class="app-container container-xxl">
                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="CreatedDate" />
                    <div class="card mb-5 mb-xl-10">
                        <div class="card-header border-0 cursor-pointer">
                            <div class="card-title m-0">
                                <h3 class="fw-bold m-0">Kupon Bilgileri</h3>
                            </div>
                        </div>
                        <div class="card-body border-top p-9">
                            <div class="row mb-6">
                                <label class="col-lg-4 col-form-label required fw-semibold fs-6">Kupon Kodu</label>
                                <div class="col-lg-8 fv-row">
                                    <input type="text" asp-for="Code" class="form-control form-control-lg form-control-solid" placeholder="Kupon Kodu" />
                                    <span asp-validation-for="Code" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row mb-6">
                                <label class="col-lg-4 col-form-label required fw-semibold fs-6">İndirim Tipi</label>
                                <div class="col-lg-8 fv-row">
                                    <select asp-for="DiscountType" class="form-select form-select-solid" asp-items="Html.GetEnumSelectList<ECommerceApp.Models.DiscountType>()"></select>
                                    <span asp-validation-for="DiscountType" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row mb-6">
                                <label class="col-lg-4 col-form-label required fw-semibold fs-6">İndirim Değeri</label>
                                <div class="col-lg-8 fv-row">
                                    <input type="number" step="0.01" asp-for="DiscountValue" class="form-control form-control-lg form-control-solid" placeholder="0.00" />
                                    <span asp-validation-for="DiscountValue" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row mb-6">
                                <label class="col-lg-4 col-form-label fw-semibold fs-6">Min. Sepet Tutarı</label>
                                <div class="col-lg-8 fv-row">
                                    <input type="number" step="0.01" asp-for="MinCartAmount" class="form-control form-control-lg form-control-solid" placeholder="0.00" />
                                    <span asp-validation-for="MinCartAmount" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row mb-6">
                                <label class="col-lg-4 col-form-label required fw-semibold fs-6">Başlangıç Tarihi</label>
                                <div class="col-lg-8 fv-row">
                                    <input type="datetime-local" asp-for="StartDate" class="form-control form-control-lg form-control-solid" />
                                    <span asp-validation-for="StartDate" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row mb-6">
                                <label class="col-lg-4 col-form-label required fw-semibold fs-6">Bitiş Tarihi</label>
                                <div class="col-lg-8 fv-row">
                                    <input type="datetime-local" asp-for="EndDate" class="form-control form-control-lg form-control-solid" />
                                    <span asp-validation-for="EndDate" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row mb-6">
                                <label class="col-lg-4 col-form-label fw-semibold fs-6">Aktif mi?</label>
                                <div class="col-lg-8 fv-row">
                                    <div class="form-check form-check-solid form-switch fv-row">
                                        <input class="form-check-input w-45px h-30px" type="checkbox" asp-for="IsActive" />
                                        <label class="form-check-label" asp-for="IsActive"></label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer d-flex justify-content-end py-6 px-9">
                            <a asp-action="Index" class="btn btn-light me-3">İptal</a>
                            <button type="submit" class="btn btn-primary">Kaydet</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
