@model List<ECommerceApp.Models.BlogComment>
@{
    ViewData["Title"] = "Blog Yorumları";
    Layout = "~/Areas/Admin/Views/_AdminLayout.cshtml";
}

<div class="app-main flex-column flex-row-fluid" id="kt_app_main">
    <div class="d-flex flex-column flex-column-fluid">
        <div id="kt_app_toolbar" class="app-toolbar py-3 py-lg-6">
            <div id="kt_app_toolbar_container" class="app-container container-xxl d-flex flex-stack">
                <div class="page-title d-flex flex-column justify-content-center flex-wrap me-3">
                    <h1 class="page-heading d-flex text-gray-900 fw-bold fs-3 flex-column justify-content-center my-0">Blog Yorumları</h1>
                    <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
                        <li class="breadcrumb-item text-muted">
                            <a asp-controller="Dashboard" asp-action="Index" class="text-muted text-hover-primary">Dashboard</a>
                        </li>
                        <li class="breadcrumb-item">
                            <span class="bullet bg-gray-500 w-5px h-2px"></span>
                        </li>
                        <li class="breadcrumb-item text-muted">Blog Yorumları</li>
                    </ul>
                </div>
            </div>
        </div>
        <div id="kt_app_content" class="app-content flex-column-fluid">
            <div id="kt_app_content_container" class="app-container container-xxl">
                
                <!-- Filter -->
                <div class="card mb-5">
                    <div class="card-body">
                        <form asp-action="Index" method="get" class="row g-3 align-items-center">
                            <div class="col-auto">
                                <label class="col-form-label">Durum:</label>
                            </div>
                            <div class="col-auto">
                                <select name="isApproved" class="form-select" onchange="this.form.submit()">
                                    <option value="">Tümü</option>
                                    <!option value="true" @(ViewBag.IsApproved == true ? "selected" : "")>Onaylananlar</!option>
                                    <!option value="false" @(ViewBag.IsApproved == false ? "selected" : "")>Onay Bekleyenler</!option>
                                </select>
                            </div>
                        </form>
                    </div>
                </div>

                <div class="card mb-5 mb-xl-8">
                    <div class="card-header border-0 pt-5">
                        <h3 class="card-title align-items-start flex-column">
                            <span class="card-label fw-bold fs-3 mb-1">Toplam @Model.Count() Yorum</span>
                        </h3>
                    </div>
                    <div class="card-body py-3">
                        <div class="table-responsive">
                            <table class="table align-middle gs-0 gy-4">
                                <thead>
                                    <tr class="fw-bold text-muted bg-light">
                                        <th class="ps-4 rounded-start">Ad Soyad</th>
                                        <th>E-posta</th>
                                        <th>Blog Yazısı</th>
                                        <th>Yorum</th>
                                        <th>Tarih</th>
                                        <th>Durum</th>
                                        <th class="rounded-end">İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                <span class="text-gray-900 fw-bold fs-6">@item.Name</span>
                                            </td>
                                            <td>@item.Email</td>
                                            <td>@item.Blog?.Title</td>
                                            <td title="@item.Comment">
                                                @if (item.Comment != null && item.Comment.Length > 50)
                                                {
                                                    @item.Comment.Substring(0, 50)<text>...</text>
                                                }
                                                else
                                                {
                                                    @item.Comment
                                                }
                                            </td>
                                            <td>@item.CreatedDate.ToString("dd.MM.yyyy HH:mm")</td>
                                            <td>
                                                @if (item.IsApproved)
                                                {
                                                    <span class="badge badge-light-success">Onaylı</span>
                                                }
                                                else
                                                {
                                                    <span class="badge badge-light-warning">Onay Bekliyor</span>
                                                }
                                            </td>
                                            <td>
                                                <form asp-action="ToggleApproval" asp-route-id="@item.Id" method="post" style="display:inline;">
                                                    @Html.AntiForgeryToken()
                                                    @if (item.IsApproved)
                                                    {
                                                        <button type="submit" class="btn btn-warning btn-sm px-4 me-2" title="Onayı Kaldır">
                                                            <i class="bi bi-x-circle-fill"></i>
                                                        </button>
                                                    }
                                                    else
                                                    {
                                                        <button type="submit" class="btn btn-success btn-sm px-4 me-2" title="Onayla">
                                                            <i class="bi bi-check-circle-fill"></i>
                                                        </button>
                                                    }
                                                </form>
                                                <a href="javascript:void(0);" onclick="deleteComment(@item.Id)" class="btn btn-danger btn-sm px-4" title="Sil">
                                                    <i class="bi bi-trash-fill"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <!-- Pagination -->
                        @if (ViewBag.TotalPages > 1)
                        {
                            <div class="d-flex justify-content-between align-items-center mt-5">
                                <div class="text-muted">
                                    Sayfa @ViewBag.CurrentPage / @ViewBag.TotalPages
                                </div>
                                <ul class="pagination">
                                    @if (ViewBag.CurrentPage > 1)
                                    {
                                        <li class="page-item">
                                            <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.CurrentPage - 1)" asp-route-isApproved="@ViewBag.IsApproved">Önceki</a>
                                        </li>
                                    }
                                    
                                    @for (int i = 1; i <= ViewBag.TotalPages; i++)
                                    {
                                        <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                            <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-isApproved="@ViewBag.IsApproved">@i</a>
                                        </li>
                                    }

                                    @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                                    {
                                        <li class="page-item">
                                            <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.CurrentPage + 1)" asp-route-isApproved="@ViewBag.IsApproved">Sonraki</a>
                                        </li>
                                    }
                                </ul>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function deleteComment(id) {
            if (confirm('Bu yorumu silmek istediğinize emin misiniz?')) {
                window.location.href = '/Admin/BlogComment/Delete/' + id;
            }
        }
    </script>
}
