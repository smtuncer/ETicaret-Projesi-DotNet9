@model ECommerceApp.Models.ReturnRequest

@{
    ViewData["Title"] = "İade Talebi Oluştur";
}

<div class="ps-page--my-account bg-light py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-4">
                <partial name="_ProfileSidebar" />
            </div>
            <div class="col-lg-9 col-md-8">
                <div class="card border-0 shadow-sm rounded-3 mb-4">
                     <div class="card-header bg-white border-bottom-0 pt-4 pb-0 px-4">
                        <h3 class="mb-0 fw-bold text-dark">İade/İptal Talebi Oluştur</h3>
                        <p class="text-muted small mt-1">Sipariş No: #@Model.OrderId</p>
                    </div>
                    <div class="card-body p-4">
                        <div class="alert alert-info border-0 rounded-3 mb-4">
                            <div class="d-flex align-items-center">
                                <i class="icon-info fs-4 me-3"></i>
                                <div>
                                    <h6 class="alert-heading fw-bold mb-1">Bilgilendirme</h6>
                                    <p class="mb-0 small">İade talebiniz tarafımızca incelendikten sonra onaylanacaktır. Onay durumunu "İade Taleplerim" sayfasından takip edebilirsiniz.</p>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex align-items-center mb-4 p-3 bg-light rounded-3">
                            <img src="@Model.OrderItem.Product.Images.FirstOrDefault()?.ImageUrl" class="rounded-3 me-3" style="width: 60px; height: 60px; object-fit: cover;" alt="@Model.OrderItem.ProductName">
                            <div>
                                <h6 class="fw-bold mb-1 text-dark">@Model.OrderItem.ProductName</h6>
                                <p class="mb-0 text-muted small">Adet: @Model.OrderItem.Quantity | Tutar: @Model.OrderItem.Price.ToString("N2") ₺</p>
                            </div>
                        </div>

                        <form asp-action="CreateReturnRequest" method="post">
                            <input type="hidden" asp-for="OrderId" />
                            <input type="hidden" asp-for="OrderItemId" />

                            <div class="mb-4">
                                <label asp-for="Reason" class="form-label fw-bold small text-uppercase text-muted">İade Nedeni</label>
                                <textarea asp-for="Reason" class="form-control rounded-3 border-light bg-light focus-border-primary" rows="4" placeholder="Lütfen iade nedeninizi detaylı bir şekilde açıklayınız..."></textarea>
                                <span asp-validation-for="Reason" class="text-danger small mt-1 d-block"></span>
                            </div>

                            <div class="d-flex justify-content-end">
                                <a asp-action="OrderDetail" asp-route-id="@Model.OrderId" class="btn btn-light rounded-pill px-4 me-2">İptal</a>
                                <button type="submit" class="btn btn-primary rounded-pill px-4 shadow-sm">Talebi Gönder</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
