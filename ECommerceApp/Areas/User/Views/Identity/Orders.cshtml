@model IEnumerable<ECommerceApp.Models.Order>

@{
    ViewData["Title"] = "Siparişlerim";
    int totalPages = ViewBag.TotalPages != null ? (int)ViewBag.TotalPages : 1;
    int currentPage = ViewBag.CurrentPage != null ? (int)ViewBag.CurrentPage : 1;
}

<div class="ps-page--my-account bg-light py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-4">
                <partial name="_ProfileSidebar" />
            </div>
            <div class="col-lg-9 col-md-8">
                <div class="card border-0 shadow-sm rounded-3 mb-4">
                    <div class="card-header bg-white border-bottom-0 pt-4 pb-0 px-4 d-flex justify-content-between align-items-center">
                        <div>
                            <h3 class="mb-0 fw-bold text-dark">Siparişlerim</h3>
                            <p class="text-muted small mt-1 mb-0">Geçmiş siparişlerinizi görüntüleyin.</p>
                        </div>
                    </div>
                    <div class="card-body p-4">
                        @if (Model != null && Model.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-hover align-middle">
                                    <thead class="bg-light text-muted small text-uppercase">
                                        <tr>
                                            <th class="py-3 ps-4 rounded-start">Sipariş No</th>
                                            <th class="py-3">Tarih</th>
                                            <th class="py-3">Durum</th>
                                            <th class="py-3">Tutar</th>
                                            <th class="py-3 pe-4 rounded-end text-end">Detay</th>
                                        </tr>
                                    </thead>
                                    <tbody class="border-0">
                                        @foreach (var order in Model)
                                        {
                                            <tr>
                                                <td class="ps-4 fw-bold text-dark">@order.OrderNumber</td>
                                                <td class="text-muted small">@order.OrderDate.ToString("dd.MM.yyyy HH:mm")</td>
                                                <td>
                                                    @if (order.Status == ECommerceApp.Models.OrderStatus.Pending)
                                                    {
                                                        <span class="badge bg-soft-warning text-warning rounded-pill px-3">Beklemede</span>
                                                    }
                                                    else if (order.Status == ECommerceApp.Models.OrderStatus.Approved)
                                                    {
                                                        <span class="badge bg-soft-success text-success rounded-pill px-3">Onaylandı</span>
                                                    }
                                                    else if (order.Status == ECommerceApp.Models.OrderStatus.Shipped)
                                                    {
                                                        <span class="badge bg-soft-info text-info rounded-pill px-3">Kargolandı</span>
                                                    }
                                                    else if (order.Status == ECommerceApp.Models.OrderStatus.Delivered)
                                                    {
                                                        <span class="badge bg-soft-success text-success rounded-pill px-3">Teslim Edildi</span>
                                                    }
                                                    else if (order.Status == ECommerceApp.Models.OrderStatus.Cancelled)
                                                    {
                                                        <span class="badge bg-soft-danger text-danger rounded-pill px-3">İptal Edildi</span>
                                                    }
                                                    else if (order.Status == ECommerceApp.Models.OrderStatus.Refunded)
                                                    {
                                                        <span class="badge bg-soft-secondary text-secondary rounded-pill px-3">İade Edildi</span>
                                                    }
                                                </td>
                                                <td class="fw-bold text-primary">@order.TotalAmount.ToString("N2") ₺</td>
                                                <td class="text-end pe-4">
                                                    @if (order.Status == ECommerceApp.Models.OrderStatus.Pending && order.PaymentMethod == ECommerceApp.Models.PaymentMethod.BankTransfer)
                                                    {
                                                        <a asp-action="CreatePaymentNotification" asp-route-orderId="@order.Id" class="btn btn-warning btn-sm rounded-pill shadow-sm text-dark me-2" data-bs-toggle="tooltip" title="Ödeme Bildir">
                                                            <i class="icon-bullhorn me-1"></i> Bildir
                                                        </a>
                                                    }
                                                    <a asp-action="OrderDetail" asp-route-id="@order.Id" class="btn btn-light btn-sm rounded-circle shadow-sm text-primary" data-bs-toggle="tooltip" title="Görüntüle">
                                                        <i class="icon-eye"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                            
                            <!-- Pagination -->

                            @if (totalPages > 1)
                            {
                                <div class="d-flex justify-content-center mt-4">
                                    <ul class="pagination">
                                        @if (currentPage > 1)
                                        {
                                            <li class="page-item">
                                                <a class="page-link" asp-action="Orders" asp-route-page="@(currentPage - 1)">«</a>
                                            </li>
                                        }

                                        @for (int i = 1; i <= totalPages; i++)
                                        {
                                            <li class="page-item @(i == currentPage ? "active" : "")">
                                                <a class="page-link" asp-action="Orders" asp-route-page="@i">@i</a>
                                            </li>
                                        }

                                        @if (currentPage < totalPages)
                                        {
                                            <li class="page-item">
                                                <a class="page-link" asp-action="Orders" asp-route-page="@(currentPage + 1)">»</a>
                                            </li>
                                        }
                                    </ul>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="text-center py-5 bg-light rounded-3 border border-dashed">
                                <i class="icon-bag2 fs-1 text-muted mb-3 opacity-50"></i>
                                <p class="text-muted mb-0">Henüz hiç siparişiniz bulunmamaktadır.</p>
                                <a asp-controller="Product" asp-action="Index" class="btn btn-link text-primary mt-2">Alışverişe Başla</a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-soft-primary {
        background-color: rgba(252, 184, 0, 0.1);
    }
    .text-primary {
        color: #C5A059 !important;
    }
    
    .bg-soft-warning { background-color: rgba(255, 193, 7, 0.1); }
    .text-warning { color: #ffc107 !important; }
    
    .bg-soft-success { background-color: rgba(25, 135, 84, 0.1); }
    .text-success { color: #198754 !important; }
    
    .bg-soft-info { background-color: rgba(13, 202, 240, 0.1); }
    .text-info { color: #0dcaf0 !important; }
    
    .bg-soft-danger { background-color: rgba(220, 53, 69, 0.1); }
    .text-danger { color: #dc3545 !important; }
    
    .bg-soft-secondary { background-color: rgba(108, 117, 125, 0.1); }
    .text-secondary { color: #6c757d !important; }

    .table > :not(caption) > * > * {
        padding: 1rem 0.5rem;
        border-bottom-color: #f5f5f5;
    }
    
    .border-dashed {
        border-style: dashed !important;
    }
    
    .btn-link {
        text-decoration: none;
    }
    .btn-link:hover {
        text-decoration: underline;
    }
</style>
