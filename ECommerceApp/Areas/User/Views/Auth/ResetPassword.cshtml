@model ECommerceApp.Models.ViewModels.ResetPasswordVM

@{
    ViewData["Title"] = "Şifre Sıfırlama";
}

<div class="ps-page--my-account">
    <div class="ps-my-account-2">
        <div class="container">
            <div class="ps-section__wrapper">
                <div class="ps-section__left">
                    <div class="ps-form--account ps-tab-root">
                        <div class="ps-tabs">
                            <div class="ps-tab active" id="reset-password">
                                <form asp-action="ResetPassword" asp-controller="Auth" method="post" class="ps-form__content">
                                    <input type="hidden" asp-for="Token" />
                                    <input type="hidden" asp-for="Email" />
                                    
                                    <h5>Yeni Şifre Belirleme</h5>
                                    <p>Lütfen hesabınız için yeni şifrenizi belirleyin.</p>
                                    
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    
                                    <div class="form-group">
                                        <input asp-for="Password" class="form-control" type="password" placeholder="Yeni Şifre">
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                    
                                    <div class="form-group">
                                        <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Yeni Şifre Tekrar">
                                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                    </div>
                                    
                                    <div class="form-group submit">
                                        <button type="submit" class="ps-btn ps-btn--fullwidth">Şifreyi Güncelle</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
