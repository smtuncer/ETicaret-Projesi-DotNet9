@using System.Linq
@model ECommerceApp.Areas.User.ViewModels.FeaturedProductsViewModel

@{
    ViewData["Title"] = "Öne Çıkarılan Ürünler";
}

<div class="ps-page--shop" id="featured-products">
    <div class="container">
        <div class="ps-shopping ps-tab-root">
            <div class="ps-shopping__header d-flex justify-content-between align-items-center flex-wrap gap-3">
                <div>
                    <h3 class="mb-1">Öne Çıkarılan Ürünler</h3>
                    <p class="mb-0"><strong>@Model.TotalCount</strong> ürün listeleniyor</p>
                </div>
            </div>

            <div class="ps-shopping__content mt-4">
                @if (Model.Products.Any())
                {
                    <div class="ps-shopping-product">
                        <div class="row">
                            @foreach (var product in Model.Products)
                            {
                                <div class="col-xl-3 col-lg-4 col-md-4 col-sm-6 col-6 mb-4">
                                    <div class="ps-product">
                                        <div class="ps-product__thumbnail">
                                            <a href="@Url.ProductUrl(product.Id, product.Name, product.Slug)">
                                                <img loading="lazy" src="@(product.PrimaryImageUrl ?? "/martfury/img/products/shop/1.jpg")" alt="@product.Name" />
                                            </a>
                                            <div class="ps-product__badge">Öne Çıkan</div>
                                            <ul class="ps-product__actions">
                                                <li>
                                                    <a href="@Url.ProductUrl(product.Id, product.Name, product.Slug)"
                                                       data-bs-toggle="tooltip"
                                                       data-placement="top"
                                                       title="İncele">
                                                        <i class="icon-eye"></i>
                                                    </a>
                                                </li>
                                            </ul>
                                        </div>
                                        <div class="ps-product__container">
                                            <span class="ps-product__vendor">@((product.BrandName ?? "Markasız"))</span>
                                            <div class="ps-product__content">
                                                <a class="ps-product__title" href="@Url.ProductUrl(product.Id, product.Name, product.Slug)">@product.Name</a>
                                                <p class="ps-product__price">@product.Price.ToString("N2") @product.Currency</p>
                                            </div>
                                            <div class="ps-product__content hover">
                                                <a class="ps-product__title" href="@Url.ProductUrl(product.Id, product.Name, product.Slug)">@product.Name</a>
                                                <p class="ps-product__price">@product.Price.ToString("N2") @product.Currency</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                }
                else
                {
                    <div class="text-center py-5">
                        <p class="mb-0">Şu anda öne çıkarılan ürün bulunmuyor.</p>
                    </div>
                }
            </div>

            @if (Model.TotalPages > 1)
            {
                <div class="ps-pagination mt-4">
                    <ul class="pagination">
                        @if (Model.CurrentPage > 1)
                        {
                            <li>
                                <a asp-action="Features" asp-route-page="@(Model.CurrentPage - 1)">
                                    <i class="icon-chevron-left"></i>
                                </a>
                            </li>
                        }

                        @{
                            var startPage = Math.Max(1, Model.CurrentPage - 2);
                            var endPage = Math.Min(Model.TotalPages, Model.CurrentPage + 2);

                            if (startPage > 1)
                            {
                                <li><a asp-action="Features" asp-route-page="1">1</a></li>
                                if (startPage > 2)
                                {
                                    <li><span>...</span></li>
                                }
                            }

                            for (int i = startPage; i <= endPage; i++)
                            {
                                <li class="@(i == Model.CurrentPage ? "active" : "")">
                                    <a asp-action="Features" asp-route-page="@i">@i</a>
                                </li>
                            }

                            if (endPage < Model.TotalPages)
                            {
                                if (endPage < Model.TotalPages - 1)
                                {
                                    <li><span>...</span></li>
                                }

                                <li><a asp-action="Features" asp-route-page="@Model.TotalPages">@Model.TotalPages</a></li>
                            }
                        }

                        @if (Model.CurrentPage < Model.TotalPages)
                        {
                            <li>
                                <a asp-action="Features" asp-route-page="@(Model.CurrentPage + 1)">
                                    <i class="icon-chevron-right"></i>
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            }
        </div>
    </div>
</div>
