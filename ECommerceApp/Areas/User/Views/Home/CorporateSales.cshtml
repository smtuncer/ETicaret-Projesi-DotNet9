@model ECommerceApp.Models.SiteContent

@{
    ViewData["Title"] = Model.CorporateSalesTitle ?? "Kurumsal Satış";
}

<div class="ps-page--single">
    <div class="ps-section--custom">
        <div class="container">
            <div class="ps-section__header mb-50">
                <h1>@(Model.CorporateSalesTitle ?? "Kurumsal Satış")</h1>
            </div>
            <div class="ps-section__content">
                @if (!string.IsNullOrEmpty(Model.CorporateSalesContent))
                {
                    <div class="ps-document">
                        @Html.Raw(Model.CorporateSalesContent)
                    </div>
                }
                else
                {
                    <div class="alert alert-info">
                        İçerik hazırlanıyor...
                    </div>
                }
            </div>
        </div>
    </div>
</div>
